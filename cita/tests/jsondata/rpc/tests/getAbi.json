{
  "title": "getAbi",
  "schema": {
    "$ref": "../schemas/getAbi.json"
  },
  "tests": [
    {
      "title": "getAbi with params and success",
      "request": {
        "method": "getAbi",
        "params": [
          "0xa31af83ee35e753a2bb19c2a82468080c2e92eee",
          "pending"
        ]
      },
      "expectedResponse": {
        "result": ""
      },
      "asserts": [
        {
          "description": "getAbi result should be equal",
          "program": ".receivedResponse.result == .expectedResponse.result"
        }
      ]
    },
    {
      "title": "getAbi with wrong param `contract address`",
      "request": {
        "method": "getAbi",
        "params": [
          "0xeffb1dab2e6ed61aa213eacaefbd1a9a41000000",
          "pending"
        ]
      },
      "expectedResponse": {
        "result": "0x"
      },
      "asserts": [
        {
          "description": "getAbi with nonexistent address should return empty result(0x)",
          "program": ".receivedResponse.result == .expectedResponse.result"
        }
      ]
    },
    {
      "title": "getAbi with no parameters",
      "request": {
        "method": "getAbi",
        "params": [],
        "shouldFailSchema": true
      },
      "expectedResponse": {
        "error": {
          "message": "missing value for required argument 0",
          "code": -32602
        }
      },
      "asserts": [
        {
          "description": "response should be an error",
          "program": ".receivedResponse.error != null"
        },
        {
          "description": "error code should be -32602",
          "program": ".receivedResponse.error.code == .expectedResponse.error.code"
        }
      ]
    }
  ]
}
