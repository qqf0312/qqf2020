{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "getMetaData",
  "description": "getMetaData JSON-RPC method request and response schema.",
  "request": {
    "id": "#request",
    "allOf": [
      {
        "$ref": "jsonrpc-request.json"
      },
      {
        "$ref": "getMetaData.json#/request/definitions/request-obj"
      }
    ],
    "definitions": {
      "request-obj": {
        "id": "#request-obj",
        "properties": {
          "method": {
            "type": "string",
            "enum": [
              "getMetaData"
            ]
          },
          "params": {
            "type": "array",
            "items": [
              {
                "type": "string",
                "description": "QUANTITY|TAG - integer of a block number, or the string \"earliest\", \"latest\", as in the default block parameter."
              }
            ],
            "minItems": 1,
            "maxItems": 1
          }
        }
      }
    }
  },
  "response": {
    "id": "#response",
    "allOf": [
      {
        "$ref": "jsonrpc-response.json"
      },
      {
        "$ref": "getMetaData.json#/response/definitions/response-obj"
      }
    ],
    "definitions": {
      "response-obj": {
        "properties": {
          "result": {
            "type": "object",
            "properties": {
              "chainId": {
                "type": "integer",
                "description": "The id of current chain"
              },
              "chainName": {
                "type": "string",
                "description": "The name of current chain"
              },
              "operator": {
                "type": "string",
                "description": "The operator of current chain"
              },
              "website": {
                "type": "string",
                "description": "Current operator's website URL"
              },
              "genesisTimestamp": {
                "type": "integer",
                "description": "Genesis block's timestamp (milliseconds)"
              },
              "validators": {
                "type": "array",
                "items": [
                  {
                    "type": "string",
                    "description": "Node's address"
                  }
                ]
              },
              "blockInterval": {
                "type": "integer",
                "description": "The interval time for creating a block (milliseconds)"
              },
              "tokenName": {
                "type": "string"
              },
              "tokenSymbol": {
                "type": "string"
              },
              "tokenAvata": {
                "type": "string"
              },
              "version": {
                "type": "integer"
              },
              "economicalModel": {
                "type": "integer"
              }
            }
          }
        }
      }
    }
  }
}
